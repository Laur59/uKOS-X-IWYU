/*
 * \brief local_newContextTOU
 *
 * - Process timeout, change of the context
 *	 - Save the stack of the old process
 *   - INT acknowledge and new time for the next process
 *   - Change the context and prepare the next process
 *     - Clear the interruption
 *     - Disable the timer
 *     - Verify the sanity of the stack
 *     - Stop time of the process
 *     - Change the context
 *     - Start time of the process
 *	 - Return the stack of the new process
 *
 */
static	uintptr_t	__attribute__ ((noinline, used)) *local_newContextTOU(uintptr_t *stack) {

// Save the stack of the old process

	vKern_stackProc[KCORE_0] = stack;

	local_timeStop();
	REG(TIM3)->CR1 &= (uint16_t)~TIM3_CR1_CEN;
	REG(TIM3)->SR  &= (uint32_t)~TIM3_SR_UIF;
	NVIC_ClearPendingIRQ(TIM3_C0_IRQn);

	INTERRUPTION_SET_PERIPH;

// Verify the sanity of the stack

	CHECK_STACK_SANITY(KCORE_0);

	scheduler_callBackSlow();
	local_timeStart();

// Statistics

	#if (KKERN_WITH_STATISTICS_S == true)
	INTERRUPTION_OFF;
	const	uint32_t	tStart = vTimeStart;
	const	uint32_t	tStop  = vTimeStop;
	const	uint32_t	tLast  = vTimeLastStart;
	const	uint32_t	tExc   = vKern_TimeException[KCORE_0];
			proc_t		*proc  = vKern_backwardProc[KCORE_0];
	INTERRUPTION_RESTORE;

	statistics_statistic(proc, tStart, tStop, tLast, tExc);
	vKern_TimeException[KCORE_0] = 0u;
	#endif

// Restore the user / privileged mode
// vKern_runProc is the process that will run in a short ...

	#if (defined(PRIVILEGED_USER_S))
	if ((vKern_runProc[KCORE_0]->oSpecification.oMode == KPROC_PRIVILEGED) || ((vKern_runProc[KCORE_0]->oInternal.oState & (1u<<BPROC_PRIV_ELEVATED)) != 0u)) { SET_PRIVILEGED_MODE; }
	else																																					  { SET_USER_MODE;		 }
	#endif

// Return the stack of the new process

	return(vKern_stackProc[KCORE_0]);
}

/*
 * \brief kernel_message_C0
 *
 * - TRAP
 * - Save the context
 * - Save the context stack
 * - Process the message sent
 * - Change the context
 * - Give another timeout to the process
 * - Recover another context
 *
 * - Save the full stack frame (uKOS-X like)
 *
 *		Normal stack frame				Stack frame with FPU
 *
 *		->	Message			+40 (36)	+108 (104)
 *		->	Message			+36 (32)	+104 (100)
 *		->	(alignment)		+32			+100			Implementation specific
 *
 *		->								FPSCR
 *		->								S15..S0
 *		->	xPSR						xPSR
 *		->	PC							PC
 *		->	LR(R14)						LR(R14)
 *		->	R12							R12
 *		->	R3..R0						R3..R0			Block stacked by an exception
 *
 *		->	R11..R4						R11..R4
 *		->	BASEPRI						BASEPRI
 *		->								S31..S16
 *		->	LR(R14)						LR(R14)			Block stacked manually
 *
 * !!! Do not generate prologue/epilogue sequences
 *
 */
void	kernel_message_C0(void) __attribute__ ((naked));
void	kernel_message_C0(void) {

	KERN_RECOVER_MESSAGE;
	KERN_SAVE_FRAME_MESSAGE;

// Change the context due to a message

	CALL_FNCT(local_newContextMSG);

	KERN_NEW_FRAME;
	KERN_RETURN;
}

/*
 * \brief local_newContextMSG
 *
 * - Message, change the context
 *	 - Save the stack of the old process
 *   - INT acknowledge and new time for the next process
 *   - Change the context and prepare the next process
 *     - Verify the sanity of the stack
 *     - Stop time of the process
 *     - Change the context
 *     - Start time of the process
 *	 - Return the stack of the new process
 *
 */
static	uintptr_t	__attribute__ ((noinline, used)) *local_newContextMSG(uintptr_t *stack, uint32_t message) {

// Save the stack of the old process

	vKern_stackProc[KCORE_0] = stack;
	vPriv_insideSVC[KCORE_0] = true;

	local_timeStop();

	INTERRUPTION_SET_PERIPH;

// Verify the sanity of the stack

	CHECK_STACK_SANITY(KCORE_0);

	scheduler_callBackTrap(message);
	local_timeStart();

// Statistics

	#if (KKERN_WITH_STATISTICS_S == true)
	INTERRUPTION_OFF;
	const	uint32_t	tStart = vTimeStart;
	const	uint32_t	tStop  = vTimeStop;
	const	uint32_t	tLast  = vTimeLastStart;
	const	uint32_t	tExc   = vKern_TimeException[KCORE_0];
			proc_t		*proc  = vKern_backwardProc[KCORE_0];
	INTERRUPTION_RESTORE;

	statistics_statistic(proc, tStart, tStop, tLast, tExc);
	vKern_TimeException[KCORE_0] = 0u;
	#endif

// Restore the user / privileged mode
// vKern_runProc is the process that will run in a short ...

	#if (defined(PRIVILEGED_USER_S))
	if ((vKern_runProc[KCORE_0]->oSpecification.oMode == KPROC_PRIVILEGED) || ((vKern_runProc[KCORE_0]->oInternal.oState & (1u<<BPROC_PRIV_ELEVATED)) != 0u)) { SET_PRIVILEGED_MODE; }
	else																																					  { SET_USER_MODE;		 }
	#endif

// Return the stack of the new process

	vPriv_insideSVC[KCORE_0] = false;
	return(vKern_stackProc[KCORE_0]);
}

/*
 * \brief local_timeStart
 *
 * - Give a new time-stamp (1-us of resolution)
 *   - 0x00000000 to 0xFFFFFFFF incremental counter
 *
 */
static	void	local_timeStart(void) {

	INTERRUPTION_OFF;
	vTimeLastStart = vTimeStart;
	vTimeStart     = REG(TIM2)->CNT;
	INTERRUPTION_RESTORE;
}

/*
 * \brief local_timeStop
 *
 * - Give a new time-stamp (1-us of resolution)
 *   - 0x00000000 to 0xFFFFFFFF incremental counter
 *
 */
static	void	local_timeStop(void) {

	INTERRUPTION_OFF;
	vTimeStop = REG(TIM2)->CNT;
	INTERRUPTION_RESTORE;
}

/*
 * \brief local_timeStmp
 *
 * - Maintain a 64-bit counter with 1-us of resolution
 *   - The 64-bit counter is based on an soft extension of the 32-bit timer
 *     The 32-bit timer is clocked @ 1-MHz, so, the rollover is after 1.19-h
 *     It is mandatory to call this function about 1 time per hour
 *   - The timer count from 0 to 0xFFFFFFFF --> 4294-s
 *
 */
static	void	local_timeStmp(bool overflow) {
	uint32_t	newTime;

	INTERRUPTION_OFF;
	newTime = REG(TIM2)->CNT;

// Overflow; add 0x100000000 to the counter
// Update the 1-us 64-bit tickCount

	if (overflow == true) {
		vTickCount = (vTickCount & 0xFFFFFFFF00000000u) + 0x100000000u;
		INTERRUPTION_RESTORE;
		return;
	}

// Normal mode
// Update the 1-us 64-bit tickCount

	if (newTime > 0u) {
		vTickCount = (vTickCount & 0xFFFFFFFF00000000u) | newTime;
	}
	INTERRUPTION_RESTORE;
}
