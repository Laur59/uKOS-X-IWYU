/*
 * \brief local_TIM2_IRQHandler
 *
 * - Update the 1-us 64-bit counter
 *
 */
static	void	local_TIM2_IRQHandler(void) {

// INT acknowledge
// Next wakeup

	REG(TIM2)->SR &= (uint32_t)~TIM2_SR_UIF;
	REG(TIM2)->ARR = (uint32_t)KARRT2;
	local_timeStmp(true);
}

#if (KKERN_NB_PRECISE_SIGNALS > 0)
/*
 * \brief local_TIM4_IRQHandler
 *
 * - Signal precise
 *
 */
static	void	local_TIM4_IRQHandler(void) {
	uint8_t		i, mode;
	uint32_t	signal;
	uint64_t	period;
	sign_t		*signalGroup;
	proc_t		*toProcess;

// INT acknowledge
// Overflow -> increment the vPrcsAbsCount

	if ((REG(TIM4)->SR & TIM4_SR_UIF) != 0u) {
		REG(TIM4)->SR &= (uint32_t)~TIM4_SR_UIF;

		vPrcsAbsCount &= 0xFFFFFFFFFFFF0000u;
		vPrcsAbsCount |= (uint64_t)REG(TIM4)->CNT;
		vPrcsAbsCount += 0x10000u;

		local_nextTime(vPrcsAbsCount);
		return;
	}

// INT acknowledge
// Compare -> Short delay
// Generate the corresponding signal (broadcast)

	if ((REG(TIM4)->SR & TIM4_SR_CC1IF) != 0u) {
		REG(TIM4)->SR &= (uint32_t)~TIM4_SR_CC1IF;

		vPrcsAbsCount &= 0xFFFFFFFFFFFF0000u;
		vPrcsAbsCount |= (uint64_t)REG(TIM4)->CNT;

		i = vPrcsIndex;

		signal		= vKern_prcs[KCORE_0][i].oSignal;
		mode		= vKern_prcs[KCORE_0][i].oMode;
		period		= vKern_prcs[KCORE_0][i].oPeriod;
		signalGroup = vKern_prcs[KCORE_0][i].oSignalGroup;
		toProcess	= vKern_prcs[KCORE_0][i].oToProcess;
		kern_signalSignal(signalGroup, signal, toProcess, KSIGN_SIGNALE_WITH_CONTEXT_SWITCH);

		if (vKern_prcs[KCORE_0][i].oMode == KPRCS_CONTINUOUS) {
			kern_setPreciseSignal(&vKern_prcs[KCORE_0][i], &signalGroup, toProcess, period, mode, signal);
		}
		else {
			vKern_prcs[KCORE_0][i].oMode = KPRCS_STOP;
			local_nextTime(vPrcsAbsCount);
		}
	}
}

/*
 * \brief local_nextTime
 *
 * - Compute the next relative time
 *
 */
static	void	local_nextTime(uint64_t absTime) {
	uint8_t		i;
	uint64_t	minNextTime;
	bool		found = false;

	REG(TIM4)->DIER &= (uint32_t)~TIM4_DIER_CC1IE;

	INTERRUPTION_OFF;

// Determine the next shortest time

	minNextTime = 0xFFFFFFFFFFFFFFFFu;
	for (i = 0u; i < KKERN_NB_PRECISE_SIGNALS; i++) {
		if ((vKern_prcs[KCORE_0][i].oState & (1u<<BPRCS_INSTALLED)) != 0u) {
			if (vKern_prcs[KCORE_0][i].oMode != KPRCS_STOP) {
				if (vKern_prcs[KCORE_0][i].oNextTime < minNextTime) {
					minNextTime = vKern_prcs[KCORE_0][i].oNextTime;
					found = true;
					vPrcsIndex = i;
				}
			}
		}
	}

// For Shortest request, it can happen that minNextTime < vCNT (too slow process).
// In this case, we launch the new time with a minimal delay of 2 ...

	if (found == true) {
		minNextTime = (minNextTime < absTime) ? (2u) : (minNextTime - absTime);
		minNextTime = (minNextTime < 2u)   	  ? (2u) : (minNextTime);
		if (minNextTime < 65536u) {
			REG(TIM4)->CCR1  = REG(TIM4)->CNT + (uint16_t)minNextTime;
			REG(TIM4)->SR   &= (uint32_t)~TIM4_SR_CC1IF;
			REG(TIM4)->DIER |= TIM4_DIER_CC1IE;
		}
	}
	INTERRUPTION_RESTORE;
}
#endif

/*
 * \brief local_TIM5_IRQHandler
 *
 * - Fine time interruption
 * - Verify the timeout condition of the suspended processes
 *
 */
static	void	local_TIM5_IRQHandler(void) {

// INT acknowledge

	REG(TIM5)->SR &= (uint32_t)~TIM5_SR_UIF;
	scheduler_callBackFast(1u);
}

/*
 * \brief PendSV_C0_IRQHandler
 *
 * - Pre-emption
 * - Save the context
 * - Save the context stack
 * - Change the context
 * - Give another timeout to the process
 * - Recover another context
 *
 * - Save the full stack frame (uKOS-X like)
 *
 *		Normal stack frame			Stack frame with FPU
 *
 *		->							FPSCR
 *		->							S15..S0
 *		->	xPSR					xPSR
 *		->	PC						PC
 *		->	LR(R14)					LR(R14)
 *		->	R12						R12
 *		->	R3..R0					R3..R0		Block stacked by an exception
 *
 *		->	R11..R4					R11..R4
 *		->	BASEPRI					BASEPRI
 *		->							S31..S16
 *		->	LR(R14)					LR(R14)		Block stacked manually
 *
 * !!! Do not generate prologue/epilogue sequences
 *
 */
void	PendSV_C0_IRQHandler(void) __attribute__ ((naked));
void	PendSV_C0_IRQHandler(void) {

	KERN_SAVE_FRAME_NORMAL;

// Change the context due to a preemption

	CALL_FNCT(local_newContextPRE);

	KERN_NEW_FRAME;
	KERN_RETURN;
}

/*
 * \brief local_newContextPRE
 *
 * - Pre-emption, change of the context
 *	 - Save the stack of the old process
 *   - Change the context and prepare the next process
 *     - Verify the sanity of the stack
 *     - Stop time of the process
 *     - Change the context
 *     - Start time of the process
 *	 - Return the stack of the new process
 *
 */
static	uintptr_t	__attribute__ ((noinline, used)) *local_newContextPRE(uintptr_t *stack) {

// Save the stack of the old process

	vKern_stackProc[KCORE_0] = stack;

	local_timeStop();

	INTERRUPTION_SET_PERIPH;

// Verify the sanity of the stack

	CHECK_STACK_SANITY(KCORE_0);

	scheduler_callBackSlow();
	local_timeStart();

// Statistics

	#if (KKERN_WITH_STATISTICS_S == true)
	INTERRUPTION_OFF;
	const	uint32_t	tStart = vTimeStart;
	const	uint32_t	tStop  = vTimeStop;
	const	uint32_t	tLast  = vTimeLastStart;
	const	uint32_t	tExc   = vKern_TimeException[KCORE_0];
			proc_t		*proc  = vKern_backwardProc[KCORE_0];
	INTERRUPTION_RESTORE;

	statistics_statistic(proc, tStart, tStop, tLast, tExc);
	vKern_TimeException[KCORE_0] = 0u;
	#endif

// Restore the user / privileged mode
// vKern_runProc is the process that will run in a short ...

	#if (defined(PRIVILEGED_USER_S))
	if ((vKern_runProc[KCORE_0]->oSpecification.oMode == KPROC_PRIVILEGED) || ((vKern_runProc[KCORE_0]->oInternal.oState & (1u<<BPROC_PRIV_ELEVATED)) != 0u)) { SET_PRIVILEGED_MODE; }
	else																																					  { SET_USER_MODE;		 }
	#endif

// Return the stack of the new process

	return(vKern_stackProc[KCORE_0]);
}

