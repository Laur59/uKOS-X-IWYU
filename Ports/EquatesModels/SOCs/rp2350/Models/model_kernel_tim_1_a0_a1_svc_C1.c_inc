// Save the stack of the old process

	vKern_stackProc[KCORE_1] = stack;

	local_timeStop_C1();
	TIMER_C1->INTE = TIMER_C1->INTE & (uint32_t)~TIMER_INTE_ALARM_1;
	TIMER_C1->INTR = TIMER_INTR_ALARM_1;
	NVIC_ClearPendingIRQ(TIMER_ALA1_VECTOR_NUMBER_C1);

	INTERRUPTION_SET_PERIPH;

// Verify the sanity of the stack

	#if (defined(STUB_KERN_CHECK_XSP_LIMIT_S))
	core_setPSPLIM(0u);
	scheduler_callBackSlow();
	local_timeStart_C1();
	core_setPSPLIM((uintptr_t)vKern_runProc[KCORE_1]->oSpecification.oStackStart & 0xFFFFFFF8u);

	#else
	CHECK_STACK_SANITY(KCORE_1);

	scheduler_callBackSlow();
	local_timeStart_C1();
	#endif

// Statistics

	#if (KKERN_WITH_STATISTICS_S == true)
	INTERRUPTION_OFF;
	const	uint32_t	tStart = vTimeStart_C1;
	const	uint32_t	tStop  = vTimeStop_C1;
	const	uint32_t	tLast  = vTimeLastStart_C1;
	const	uint32_t	tExc   = vKern_TimeException[KCORE_1];
			proc_t		*proc  = vKern_backwardProc[KCORE_1];
	INTERRUPTION_RESTORE;

	statistics_statistic(proc, tStart, tStop, tLast, tExc);
	vKern_TimeException[KCORE_1] = 0u;
	#endif

// Restore the user / privileged mode
// vKern_runProc is the process that will run in a short ...

	#if (defined(PRIVILEGED_USER_S))
	if ((vKern_runProc[KCORE_1]->oSpecification.oMode == KPROC_PRIVILEGED) || ((vKern_runProc[KCORE_1]->oInternal.oState & (1u<<BPROC_PRIV_ELEVATED)) != 0u)) { SET_PRIVILEGED_MODE; }
	else																																					  { SET_USER_MODE;		 }
	#endif

// Return the stack of the new process

	return(vKern_stackProc[KCORE_1]);
}

/*
 * \brief kernel_message_C1
 *
 * - TRAP
 * - Save the context
 * - Save the context stack
 * - Process the message sent
 * - Change the context
 * - Give another timeout to the process
 * - Recover another context
 *
 * - Save the full stack frame (uKOS-X like)
 *
 *		Normal stack frame				Stack frame with FPU
 *
 *		->	Message			+40 (36)	+108 (104)
 *		->	Message			+36 (32)	+104 (100)
 *		->	(alignment)		+32			+100			Implementation specific
 *
 *		->								FPSCR
 *		->								S15..S0
 *		->	xPSR						xPSR
 *		->	PC							PC
 *		->	LR(R14)						LR(R14)
 *		->	R12							R12
 *		->	R3..R0						R3..R0			Block stacked by an exception
 *
 *		->	R11..R4						R11..R4
 *		->	BASEPRI						BASEPRI
 *		->								S31..S16
 *		->	LR(R14)						LR(R14)			Block stacked manually
 *
 * !!! Do not generate prologue/epilogue sequences
 *
 */
void	kernel_message_C1(void) __attribute__ ((naked));
void	kernel_message_C1(void) {

	KERN_RECOVER_MESSAGE;
	KERN_SAVE_FRAME_MESSAGE;

// Change the context due to a message

	CALL_FNCT(local_newContextMSG_C1);

	KERN_NEW_FRAME;
	KERN_RETURN;
}

/*
 * \brief local_newContextMSG_C1
 *
 * - Message, change the context
 *	 - Save the stack of the old process
 *   - INT acknowledge and new time for the next process
 *   - Change the context and prepare the next process
 *     - Verify the sanity of the stack
 *     - Stop time of the process
 *     - Change the context
 *     - Start time of the process
 *	 - Return the stack of the new process
 *
 */
static	uintptr_t	__attribute__ ((noinline, used)) *local_newContextMSG_C1(uintptr_t *stack, uint32_t message) {

// Save the stack of the old process

	vKern_stackProc[KCORE_1] = stack;
	vPriv_insideSVC[KCORE_1] = true;

	local_timeStop_C1();

	INTERRUPTION_SET_PERIPH;

// Verify the sanity of the stack

	#if (defined(STUB_KERN_CHECK_XSP_LIMIT_S))
	core_setPSPLIM(0u);
	scheduler_callBackTrap(message);
	local_timeStart_C1();
	core_setPSPLIM((uintptr_t)vKern_runProc[KCORE_1]->oSpecification.oStackStart & 0xFFFFFFF8u);

	#else
	CHECK_STACK_SANITY(KCORE_1);

	scheduler_callBackTrap(message);
	local_timeStart_C1();
	#endif

// Statistics

	#if (KKERN_WITH_STATISTICS_S == true)
	INTERRUPTION_OFF;
	const	uint32_t	tStart = vTimeStart_C1;
	const	uint32_t	tStop  = vTimeStop_C1;
	const	uint32_t	tLast  = vTimeLastStart_C1;
	const	uint32_t	tExc   = vKern_TimeException[KCORE_1];
			proc_t		*proc  = vKern_backwardProc[KCORE_1];
	INTERRUPTION_RESTORE;

	statistics_statistic(proc, tStart, tStop, tLast, tExc);
	vKern_TimeException[KCORE_1] = 0u;
	#endif

// Restore the user / privileged mode
// vKern_runProc is the process that will run in a short ...

	#if (defined(PRIVILEGED_USER_S))
	if ((vKern_runProc[KCORE_1]->oSpecification.oMode == KPROC_PRIVILEGED) || ((vKern_runProc[KCORE_1]->oInternal.oState & (1u<<BPROC_PRIV_ELEVATED)) != 0u)) { SET_PRIVILEGED_MODE; }
	else																																					  { SET_USER_MODE;		 }
	#endif

// Return the stack of the new process

	vPriv_insideSVC[KCORE_1] = false;
	return(vKern_stackProc[KCORE_1]);
}

/*
 * \brief local_timeStart_C1
 *
 * - Give a new time-stamp (1-us of resolution)
 *   - 0x00000000 to 0xFFFFFFFF incremental counter
 *
 */
static	void	local_timeStart_C1(void) {

	INTERRUPTION_OFF;
	vTimeLastStart_C1 = vTimeStart_C1;
	vTimeStart_C1     = TIMER_C1->TIMERAWL;
	INTERRUPTION_RESTORE;
}

/*
 * \brief local_timeStop_C1
 *
 * - Give a new time-stamp (1-us of resolution)
 *   - 0x00000000 to 0xFFFFFFFF incremental counter
 *
 */
static	void	local_timeStop_C1(void) {

	INTERRUPTION_OFF;
	vTimeStop_C1 = TIMER_C1->TIMERAWL;
	INTERRUPTION_RESTORE;
}

/*
 * \brief local_timeStmp_C1
 *
 * - Maintain a 64-bit counter with 1-us of resolution
 *   - The 64-bit counter is based on an soft extension of the 32-bit timer
 *     The 32-bit timer is clocked @ 1-MHz, so, the rollover is after 1.19-h
 *     It is mandatory to call this function about 1 time per hour
 *   - The timer count from 0 to 0xFFFFFFFF --> 4294-s
 *
 */
static	void	local_timeStmp_C1(bool overflow) {
	uint32_t	newTime;

	INTERRUPTION_OFF;
	newTime = TIMER_C1->TIMERAWL;

// Overflow; add 0x100000000 to the counter
// Update the 1-us 64-bit tickCount

	if (overflow == true) {
		vTickCount_C1 = (vTickCount_C1 & 0xFFFFFFFF00000000u) + 0x100000000u;
		INTERRUPTION_RESTORE;
		return;
	}

// Normal mode
// Update the 1-us 64-bit tickCount

	if (newTime > 0u) {
		vTickCount_C1 = (vTickCount_C1 & 0xFFFFFFFF00000000u) | newTime;
	}
	INTERRUPTION_RESTORE;
}
