#define	K1ms_C0			((float64_t)(0.001))

#define KTIC_DELTA_C0	((uint32_t)(KFREQUENCY_TIM * KKERN_TIC_TIME * K1ms_C0))			// 1-ms tic

#define KTOUT_DELTA_C0	((uint32_t)(KFREQUENCY_TIM * KKERN_PROC_TIMEOUT * K1ms_C0))		// 20-ms timeout

static	volatile	uint32_t	vTimeStart_C0     = 0U;									// Time-stamp: when the process was scheduled
static	volatile	uint32_t	vTimeStop_C0      = 0U;									// Time-stamp: when the process was stopped
static	volatile	uint32_t	vTimeLastStart_C0 = 0U;									// Time-stamp: when the process was started (previous cycle)
static	volatile	uint64_t	vTickCount_C0	  = 0U;									// 64-bit timer (1-us)
extern	volatile	bool		vPriv_insideSVC[KNB_CORES];								// Inside an SVC call

// Prototypes

extern	void	(*vExce_indIntVectors[KNB_CORES][KNB_INTERRUPTIONS])(void);

static	uintptr_t	*local_newContextPRE_C0(uintptr_t *stack);
static	uintptr_t	*local_newContextTOU_C0(uintptr_t *stack);
static	uintptr_t	*local_newContextMSG_C0(uintptr_t *stack, uint32_t message);
static	void		local_TIM0_ALA0_IRQHandler_C0(void);
static	void		local_timeStmp_C0(bool overflow);
static	void		local_timeStart_C0(void);
static	void		local_timeStop_C0(void);

/*
 * \brief Initialise the uKernel
 *
 * - Initialise the manager
 *
 */
void	model_kernel_init_C0(void) {

// Reset of the device

	REG(RESETS)->RESET &= ~RESETS_RESET_TIMER0;
	while ((REG(RESETS)->RESET_DONE & RESETS_RESET_TIMER0) != RESETS_RESET_TIMER0) { }

	TIMER_C0->INTR = 0xFFFFFFFFu;

	INTERRUPT_VECTOR(TIMER_ALA0_VECTOR_NUMBER_C0, local_TIM0_ALA0_IRQHandler_C0);

	NVIC_SetPriority(TIMER_ALA0_VECTOR_NUMBER_C0, KINT_LEVEL_KERNEL_TIMERS);
	NVIC_SetPriority(TIMER_ALA1_VECTOR_NUMBER_C0, KINT_LEVEL_KERNEL_TIMERS);
	NVIC_SetPriority(PendSV_VECTOR_NUMBER_C0, KINT_LEVEL_KERNEL_PREEMPTION);

// Alarme 0 (1-ms or tickless)
// Alarme 1 (20-ms)

	TIMER_C0->ALARM0 = TIMER_C0->TIMERAWL + KTIC_DELTA_C0;
	TIMER_C0->ALARM1 = TIMER_C0->TIMERAWL + KTOUT_DELTA_C0;
}

/*
 * \brief Run the multitasking
 *
 * - Run the kernel
 *
 */
void	model_kernel_runKernel_C0(void) {

	TIMER_C0->INTE = TIMER_C0->INTE | TIMER_INTE_ALARM_0;
	TIMER_C0->INTE = TIMER_C0->INTE | TIMER_INTE_ALARM_1;

	NVIC_ClearPendingIRQ(TIMER_ALA0_VECTOR_NUMBER_C0);
	NVIC_ClearPendingIRQ(TIMER_ALA1_VECTOR_NUMBER_C0);

	NVIC_EnableIRQ(TIMER_ALA0_VECTOR_NUMBER_C0);
	NVIC_EnableIRQ(TIMER_ALA1_VECTOR_NUMBER_C0);

	vTickCount_C0 = 0U;
}

/*
 * \brief Set the low power mode
 *
 * - Set the low power mode
 *
 * KKERN_CPU_MODE_NORMAL		-> Normal mode
 * KKERN_CPU_MODE_DEEP_SLEEP	-> CPU in a deep sleep mode
 * KKERN_CPU_MODE_HIBERNATE		-> CPU in a hibernate mode
 * KKERN_CPU_MODE_STOP			-> CPU in a stop mode
 *
 */
void	model_kernel_setLowPower_C0(uint8_t mode) {

	switch (mode) {
		case KKERN_CPU_MODE_NORMAL:
		case KKERN_CPU_MODE_DEEP_SLEEP:
		case KKERN_CPU_MODE_HIBERNATE:
		case KKERN_CPU_MODE_STOP:
		default: {

// Waiting for an interruption

			WAITING_INTERRUPTION;
			break;
		}
	}
}

/*
 * \brief Read the tickCount
 *
 * - Read the tickcount
 *
 */
void	model_kernel_readTickCount_C0(uint64_t *tickCount) {

	INTERRUPTION_OFF;
	local_timeStmp_C0(false);

	*tickCount = vTickCount_C0;
	INTERRUPTION_RESTORE;
}

/*
 * \brief Start a new process timeout
 *
 * - Start a new process timeout
 *
 */
void	model_kernel_newProcessTimeout_C0(void) {

	TIMER_C0->INTE = TIMER_C0->INTE & (uint32_t)~TIMER_INTE_ALARM_1;
	TIMER_C0->INTR = TIMER_INTR_ALARM_1;

	NVIC_ClearPendingIRQ(TIMER_ALA1_VECTOR_NUMBER_C0);
	NVIC_EnableIRQ(TIMER_ALA1_VECTOR_NUMBER_C0);

	TIMER_C0->ALARM1 = TIMER_C0->TIMERAWL + KTOUT_DELTA_C0;
	TIMER_C0->INTE	 = TIMER_C0->INTE | TIMER_INTE_ALARM_1;
}

/*
 * \brief Stop the process timeout
 *
 * - Stop the process timeout
 *
 */
void	model_kernel_stopProcessTimeout_C0(void) {

	NVIC_DisableIRQ(TIMER_ALA1_VECTOR_NUMBER_C0);
}

// Local routines
// ==============

/*
 * \brief local_TIM0_ALA0_IRQHandler_C0
 *
 * - Fine time interruption
 * - Verify the timeout condition of the suspended processes
 *
 */
static	void	local_TIM0_ALA0_IRQHandler_C0(void) {

// INT acknowledge

	TIMER_C0->INTR	 = TIMER_INTR_ALARM_0;
	TIMER_C0->ALARM0 = TIMER_C0->TIMERAWL + KTIC_DELTA_C0;

	local_timeStmp_C0(false);
	scheduler_callBackFast(1U);
}

/*
 * \brief PendSV_C0_IRQHandler
 *
 * - Pre-emption
 * - Save the context
 * - Save the context stack
 * - Change the context
 * - Give another timeout to the process
 * - Recover another context
 *
 * - Save the full stack frame (uKOS-X like)
 *
 *		Normal stack frame			Stack frame with FPU
 *
 *		->							FPSCR
 *		->							S15..S0
 *		->	xPSR					xPSR
 *		->	PC						PC
 *		->	LR(R14)					LR(R14)
 *		->	R12						R12
 *		->	R3..R0					R3..R0		Block stacked by an exception
 *
 *		->	R11..R4					R11..R4
 *		->	BASEPRI					BASEPRI
 *		->							S31..S16
 *		->	LR(R14)					LR(R14)		Block stacked manually
 *
 * !!! Do not generate prologue/epilogue sequences
 *
 */
void	PendSV_C0_IRQHandler(void) __attribute__ ((naked));
void	PendSV_C0_IRQHandler(void) {

	KERN_SAVE_FRAME_NORMAL;

// Change the context due to a preemption

	CALL_FNCT(local_newContextPRE_C0);

	KERN_NEW_FRAME;
	KERN_RETURN;
}

/*
 * \brief local_newContextPRE_C0
 *
 * - Pre-emption, change of the context
 *	 - Save the stack of the old process
 *   - Change the context and prepare the next process
 *     - Verify the sanity of the stack
 *     - Stop time of the process
 *     - Change the context
 *     - Start time of the process
 *	 - Return the stack of the new process
 *
 */
static	uintptr_t	__attribute__ ((noinline, used)) *local_newContextPRE_C0(uintptr_t *stack) {

// Save the stack of the old process

	vKern_stackProc[KCORE_0] = stack;

	local_timeStop_C0();

	INTERRUPTION_SET_PERIPH;

// Verify the sanity of the stack

	#if (defined(STUB_KERN_CHECK_XSP_LIMIT_S))
	core_setPSPLIM(0U);
	scheduler_callBackSlow();
	local_timeStart_C0();
	core_setPSPLIM((uintptr_t)vKern_runProc[KCORE_0]->oSpecification.oStackStart & 0xFFFFFFF8u);

	#else
	CHECK_STACK_SANITY(KCORE_0);

	scheduler_callBackSlow();
	local_timeStart_C0();
	#endif

// Statistics

	#if (KKERN_WITH_STATISTICS_S == true)
	INTERRUPTION_OFF;
	const	uint32_t	tStart = vTimeStart_C0;
	const	uint32_t	tStop  = vTimeStop_C0;
	const	uint32_t	tLast  = vTimeLastStart_C0;
	const	uint32_t	tExc   = vKern_TimeException[KCORE_0];
			proc_t		*proc  = vKern_backwardProc[KCORE_0];
	INTERRUPTION_RESTORE;

	statistics_statistic(proc, tStart, tStop, tLast, tExc);
	vKern_TimeException[KCORE_0] = 0U;
	#endif

// Restore the user / privileged mode
// vKern_runProc is the process that will run in a short ...

	#if (defined(PRIVILEGED_USER_S))
	if ((vKern_runProc[KCORE_0]->oSpecification.oMode == KPROC_PRIVILEGED) || ((vKern_runProc[KCORE_0]->oInternal.oState & (1U<<BPROC_PRIV_ELEVATED)) != 0U)) { SET_PRIVILEGED_MODE; }
	else																																					  { SET_USER_MODE;		 }
	#endif

// Return the stack of the new process

	return(vKern_stackProc[KCORE_0]);
}

