 * - Give a new time-stamp (1-us of resolution)
 *   - 0x00000000 to 0xFFFFFFFF incremental counter
 *
 */
static	void	local_timeStart_C1(void) {

	INTERRUPTION_OFF;
	vTimeLastStart_C1 = vTimeStart_C1;
	vTimeStart_C1     = ~timer1->channel[2].current_value / (KFREQUENCY_TIM / 1000000U);
	INTERRUPTION_RESTORE;
}

/*
 * \brief local_timeStop_C1
 *
 * - Give a new time-stamp (1-us of resolution)
 *   - 0x00000000 to 0xFFFFFFFF incremental counter
 *
 */
static	void	local_timeStop_C1(void) {

	vTimeStop_C1 = ~timer1->channel[2].current_value / (KFREQUENCY_TIM / 1000000U);
}

/*
 * \brief local_TIM1_B_IRQHandler_C1
 *
 * - Build a 64-bit counter @ CPU speed
 *
 */
static	void	local_TIM1_B_IRQHandler_C1(uint32_t core, uint64_t parameter) {

// Acknowledge the TIM1_B interruption
// Acknowledge the PLIC claim complete

	timer1->channel[2].eoi;
	plic->targets.target[core].claim_complete = (uint32_t)parameter;

// Compute the vTickCount403_C1

	vTickCount403_C1 = vTickCount403_C1 & 0xFFFFFFFF00000000u;
	vTickCount403_C1 = vTickCount403_C1 + 0x0000000100000000u;
}

/*
 * \brief local_timeStmp_C1
 *
 * - Maintain a 64-bit timer with 1-us of resolution
 *
 */
static	void	local_timeStmp_C1(void) {

	INTERRUPTION_OFF;
	vTickCount403_C1 = vTickCount403_C1 & 0xFFFFFFFF00000000u;
	vTickCount403_C1 = vTickCount403_C1 | ~timer1->channel[2].current_value;
	vTickCount_C1    = vTickCount403_C1 / (KFREQUENCY_TIM / 1000000U);
	INTERRUPTION_RESTORE;
}
