/*
 * \brief local_TIM0_B_IRQHandler_C1
 *
 * - Fine time interruption
 * - Verify the timeout condition of the suspended processes
 *
 */
static	void	local_TIM0_B_IRQHandler_C1(uint32_t core, uint64_t parameter) {

// INT acknowledge

	timer0->channel[2].eoi;
	plic->targets.target[core].claim_complete = (uint32_t)parameter;

	scheduler_callBackFast(1U);
	local_timeStmp_C1();
}

/*
 * \brief local_PREEMPTION_IRQHandler_C1
 *
 * - Pre-emption
 * - Save the context
 * - Save the context stack
 * - Change the context
 * - Give another timeout to the process
 * - Recover another context
 *
 * - Save the full stack frame (uKOS-X like)
 *
 *		Normal stack frame
 *
 *		->	ra
 *		->	t2..t0
 *		->	s1..s0
 *		->	a7..a0
 *		->	t6..t3
 *		->	fa7..fa0
 *		->	ft11..t8
 *		->	s11..s2
 *		->	tp
 *		->	gp
 *		->	x0
 *		->	fs11..fs0
 *		->  fscr
 *		->	mepc
 *		->	mcause
 *		->	mstatus
 *		->	core
 *		->	PLIC-mth
 *
 * !!! Do not generate prologue/epilogue sequences
 *
 */
		void	local_changeContext_PRE_C1(uint32_t core, uint64_t parameter, uint64_t *threshold, uintptr_t *stack);
static	void	local_PREEMPTION_IRQHandler_C1(uint32_t core, uint64_t parameter) __attribute__ ((naked));
static	void	local_PREEMPTION_IRQHandler_C1(uint32_t core, uint64_t parameter) {

	#if (!defined(__clang__))
	UNUSED(core);
	UNUSED(parameter);
	#endif

	KERN_SAVE_FRAME;

// eabi registers a0..a3 are set in the KERN_SAVE_FRAME macro
// a0 = core, a1 = parameter, a2 = *threshold, a3 = stack

	JUMP_FNCT(local_changeContext_PRE_C1);
}

// The input parameters have to be provided by the macro KERN_SAVE_FRAME and
// have to comply with the eabi
//
//																	   a0			  a1				  a2					a3
void	__attribute__ ((noinline)) local_changeContext_PRE_C1(uint32_t core, uint64_t parameter, uint64_t *threshold, uintptr_t *stack) {
	const	volatile	uint64_t	*newStack;

// Save the plic threshold on the current process stack
// Save the current process stack

	*threshold = (uint64_t)plic->targets.target[core].priority_threshold & 0x00000000000000FFu;
	vKern_stackProc[core] = stack;

// Change the context

	local_newContextPRE_C1(core, parameter);

// Recover the new process stack
// Recover the new plic threshold on the new process stack

	newStack = (volatile uint64_t *)vKern_stackProc[core];
	plic->targets.target[core].priority_threshold = (uint32_t)(newStack[0] & 0x00000000000000FFu);

// Prepare a1 with the pointer on the new stack (see macro KERN_NEW_FRAME)

	__asm volatile ("add	a1,x0,%0" : : "r" (newStack) :);

	KERN_NEW_FRAME;
	KERN_RETURN;
}

/*
 * \brief local_newContextPRE_C1
 *
 * - Pre-emption, change of the context
 *   - Change the context and prepare the next process
 *     - Verify the sanity of the stack
 *     - Stop time of the process
 *     - Change the context
 *     - Start time of the process
 *
 */
static	void	__attribute__ ((noinline)) local_newContextPRE_C1(uint32_t core, uint64_t parameter) {

	vExce_isException[core] = false;

	gpiohs->rise_ie.u32[0] &= (uint32_t)~(1U<<BKERN_PREEMPTION_C1);
	plic->targets.target[core].claim_complete = (uint32_t)parameter;

	timer2->channel[2].eoi;
	timer2->channel[2].control &= (uint32_t)~TIMER_CR_ENABLE;

	INTERRUPTION_SET_PERIPH;
	INTERRUPTION_ON_HARD;
	CHECK_STACK_SANITY(core);

	local_timeStop_C1();
	scheduler_callBackSlow();
	local_timeStart_C1();

	#if (KKERN_WITH_STATISTICS_S == true)
	INTERRUPTION_OFF;
	const	uint32_t	tStart = vTimeStart_C1;
	const	uint32_t	tStop  = vTimeStop_C1;
	const	uint32_t	tLast  = vTimeLastStart_C1;
	const	uint32_t	tExc   = vKern_TimeException[core];
			proc_t		*proc  = vKern_backwardProc[core];
	INTERRUPTION_RESTORE;

	statistics_statistic(proc, tStart, tStop, tLast, tExc);
	vKern_TimeException[core] = 0U;
	#endif
}

