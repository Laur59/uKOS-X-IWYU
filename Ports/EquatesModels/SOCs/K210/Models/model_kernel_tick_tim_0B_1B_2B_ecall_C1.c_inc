#define	K1ms_B		((float64_t)(0.001))

#define KARRT0_B	((uint32_t)(KFREQUENCY_1GHz * K1ms_B * KKERN_TIC_TIME))				// Autoreload
#define KARRT1_B	(~0U)																// Autoreload
#define KARRT2_B	((uint32_t)(KFREQUENCY_1GHz * K1ms_B * KKERN_PROC_TIMEOUT))			// Autoreload

static	volatile	uint32_t	vTimeStart_C1     = 0U;									// Time-stamp: when the process was scheduled
static	volatile	uint32_t	vTimeStop_C1      = 0U;									// Time-stamp: when the process was stopped
static	volatile	uint32_t	vTimeLastStart_C1 = 0U;									// Time-stamp: when the process was started (previous cycle)
static				uint64_t	vTickCount_C1     = 0U;									// 64-bit timer (1-us)
static				uint64_t	vTickCount403_C1  = 0U;									// 64-bit timer (2.65-ns) @ 403-MHz

