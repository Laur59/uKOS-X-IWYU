/*
 * \brief Initialise the uKernel
 *
 * - Initialise the manager
 *
 */
void	model_kernel_init_C1(void) {

	sysctl->clk_en_peri.timer0_clk_en = 1U;			// Turn on the TIM0
	sysctl->clk_en_peri.timer1_clk_en = 1U;			// Turn on the TIM1
	sysctl->clk_en_peri.timer2_clk_en = 1U;			// Turn on the TIM2
}

/*
 * \brief Run the multitasking
 *
 * - Run the kernel
 *
 */
void	model_kernel_runKernel_C1(void) {
	float64_t	step;
	uint32_t	current;

	step = 1e9 / (float64_t)KFREQUENCY_TIM;

// 1-ms timer (precise)
//
// Set the priority
// Get current enable bit array by IRQ number
// Set enable bit in enable bit array
// Write back the enable bit array

	EXT_INTERRUPT_VECTOR(EINT_TIMER0B_INTERRUPT, local_TIM0_B_IRQHandler_C1);

	plic->source_priorities.priority[EINT_TIMER0B_INTERRUPT] = KINT_LEVEL_KERNEL_TIMERS;
	current = plic->target_enables.target[KCORE_1].enable[(uint32_t)EINT_TIMER0B_INTERRUPT / 32U];
	current |= (uint32_t)(1U<<((uint32_t)EINT_TIMER0B_INTERRUPT % 32U));
	plic->target_enables.target[KCORE_1].enable[(uint32_t)EINT_TIMER0B_INTERRUPT / 32U] = current;

// Initialise the TIM0_B to generate interruptions every 1-ms

	timer0->channel[2].load_count = (uint32_t)(KARRT0_B / step);
	timer0->channel[2].control &= (uint32_t)~TIMER_CR_INTERRUPT_MASK;
	timer0->channel[2].control |= (TIMER_CR_USER_MODE | TIMER_CR_ENABLE);

// ~10-s timer
//
// Set the priority
// Get current enable bit array by IRQ number
// Set enable bit in enable bit array
// Write back the enable bit array

	EXT_INTERRUPT_VECTOR(EINT_TIMER1B_INTERRUPT, local_TIM1_B_IRQHandler_C1);

	plic->source_priorities.priority[EINT_TIMER1B_INTERRUPT] = KINT_LEVEL_KERNEL_TIMERS;
	current = plic->target_enables.target[KCORE_1].enable[(uint32_t)EINT_TIMER1B_INTERRUPT / 32U];
	current |= (uint32_t)(1U<<((uint32_t)EINT_TIMER1B_INTERRUPT % 32U));
	plic->target_enables.target[KCORE_1].enable[(uint32_t)EINT_TIMER1B_INTERRUPT / 32U] = current;

// Initialise the TIM1_B to generate interruptions every ~10-s

	timer1->channel[2].load_count = (uint32_t)KARRT1_B;
	timer1->channel[2].control &= (uint32_t)~TIMER_CR_INTERRUPT_MASK;
	timer1->channel[2].control |= (TIMER_CR_USER_MODE | TIMER_CR_ENABLE);

// 20-ms timer (time slot)
//
// Set the priority
// Get current enable bit array by IRQ number
// Set enable bit in enable bit array
// Write back the enable bit array

	EXT_INTERRUPT_VECTOR(EINT_TIMER2B_INTERRUPT, local_TIM2_B_IRQHandler_C1);

	plic->source_priorities.priority[EINT_TIMER2B_INTERRUPT] = KINT_LEVEL_KERNEL_TIMERS;
	current = plic->target_enables.target[KCORE_1].enable[(uint32_t)EINT_TIMER2B_INTERRUPT / 32U];
	current |= (uint32_t)(1U<<((uint32_t)EINT_TIMER2B_INTERRUPT % 32U));
	plic->target_enables.target[KCORE_1].enable[(uint32_t)EINT_TIMER2B_INTERRUPT / 32U] = current;

// Initialise the TIM2_B to generate interruptions every 20-ms

	timer2->channel[2].load_count = (uint32_t)(KARRT2_B / step);
	timer2->channel[2].control &= (uint32_t)~TIMER_CR_INTERRUPT_MASK;
	timer2->channel[2].control |=  TIMER_CR_USER_MODE;

// GPIOHS for preemptions
//
// Set the priority
// Get current enable bit array by IRQ number
// Set enable bit in enable bit array
// Write back the enable bit array

	EXT_INTERRUPT_VECTOR(KKERN_PREEMPTION_C1, local_PREEMPTION_IRQHandler_C1);

	plic->source_priorities.priority[KKERN_PREEMPTION_C1] = KINT_LEVEL_ALL;
	current = plic->target_enables.target[KCORE_1].enable[(uint32_t)KKERN_PREEMPTION_C1 / 32U];
	current |= (uint32_t)(1U<<((uint32_t)KKERN_PREEMPTION_C1 % 32U));
	plic->target_enables.target[KCORE_1].enable[(uint32_t)KKERN_PREEMPTION_C1 / 32U] = current;

	gpiohs->input_val.u32[0] &= (uint32_t)~(1U<<BKERN_PREEMPTION_C1);
	gpiohs->input_en.u32[0]  |= (1U<<BKERN_PREEMPTION_C1);

// ECALL for messages

	vMsgs_process[KCORE_1] = local_ECALL_message_C1;
}

/*
 * \brief Set the low power mode
 *
 * - Set the low power mode
 *
 * KKERN_CPU_MODE_NORMAL		-> Normal mode
 * KKERN_CPU_MODE_DEEP_SLEEP	-> CPU in a deep sleep mode
 * KKERN_CPU_MODE_HIBERNATE		-> CPU in a hibernate mode
 * KKERN_CPU_MODE_STOP			-> CPU in a stop mode
 *
 */
void	model_kernel_setLowPower_C1(uint8_t mode) {

	switch (mode) {
		case KKERN_CPU_MODE_NORMAL:
		case KKERN_CPU_MODE_DEEP_SLEEP:
		case KKERN_CPU_MODE_HIBERNATE:
		case KKERN_CPU_MODE_STOP:
		default: {

// Waiting for an interruption

			WAITING_INTERRUPTION;
			break;
		}
	}
}

