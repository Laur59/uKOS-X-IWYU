/*
 * \brief model_flash_protect
 *
 * - Protect the flash from reading
 *   The used protection could be: level 0, level 1 and level 2
 *   !!! the flash cannot be reprogrammed anymore in level 2 !!!
 *
 */
void	model_flash_protect(uint8_t level) {
	uint32_t	optcr;

// Allow operations on the Flash

	FLASH->OPTKEYR = 0x08192A3Bu;
	FLASH->OPTKEYR = 0x4C5D6E7Fu;

// Set the selected level 0, 1 or 2

	optcr = FLASH->OPTCR;
	optcr &= (uint32_t)~(0xFFu<<8U);

	switch (level) {
		case 0x00u: { optcr |= (0x55u<<8U); break; }
		case 0x01u: { optcr |= (0xAAu<<8U); break; }
		case 0x02u: { optcr |= (0xCCu<<8U); break; }
		default:    { optcr |= (0x55u<<8U); break; }
	}
	FLASH->OPTCR = optcr;

// Validate the choice

	kern_suspendProcess(1U);
	optcr = FLASH->OPTCR;
	optcr &= (uint32_t)~(FLASH_OPTCR_OPTSTRT | FLASH_OPTCR_OPTLOCK);
	optcr |= FLASH_OPTCR_OPTSTRT;
	FLASH->OPTCR = optcr;

	kern_suspendProcess(1U);
	optcr = FLASH->OPTCR;
	optcr &= (uint32_t)~(FLASH_OPTCR_OPTSTRT | FLASH_OPTCR_OPTLOCK);
	optcr |= FLASH_OPTCR_OPTLOCK;
	FLASH->OPTCR = optcr;
}
