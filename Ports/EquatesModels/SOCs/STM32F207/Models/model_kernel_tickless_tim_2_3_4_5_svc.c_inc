#define	K1ms		((float64_t)(0.001))

#define KPSCT2		((KFREQUENCY_T2 / KFREQUENCY_1MHz) - 1U)							// Prescaler for 1'000'000-Hz
#define KARRT2		(~0U)																// Autoreload (every 4294-s)

#define KPSCT3		((KFREQUENCY_T3 / KFREQUENCY_1MHz) - 1U)							// Prescaler for 1'000'000-Hz
#define KARRT3		((uint32_t)((KFREQUENCY_1MHz * KKERN_PROC_TIMEOUT * K1ms) - 1U))	// Autoreload

#if (KKERN_NB_PRECISE_SIGNALS > 0)
#define KPSCT4		((KFREQUENCY_T4 / KFREQUENCY_1MHz) - 1U)							// Prescaler for 1'000'000-Hz
#define KARRT4		(~0U)																// Autoreload (every 4294-s)
#endif

// Special initialization for the tickless scheduler
// 1-bit corresponds to 0.5-ms, so N = 2
// The maximum usable time withing the tickless mode is:
// (0xFFFFFFFF - 1) >> 2 --> 0x7FFFFFFF

#define	N			2U																	// 1 bit corresponds to 0.5-ms
#define KPSCT5		((KFREQUENCY_T5 / (N * KFREQUENCY_1KHz)) - 1U)						// Prescaler for 1'000'000-Hz
#define KARRT5		((uint32_t)((N * KFREQUENCY_1KHz * KKERN_TIC_TIME * K1ms) - 1U))	// Autoreload

enum {
		KWUNORTO = 0U,																	// Tickless wake-up by a normal timeout
		KWUINTPR																		// Tickless wake-up by a preemption interruption
};

#if (KKERN_NB_PRECISE_SIGNALS > 0)
static				uint64_t	vPrcsAbsCount  = 0U;									// 64-bit timer (1-us) for signal precise
static				uint8_t		vPrcsIndex     = 0U;									// Index for signal precise
#endif

static	volatile	uint32_t	vTimeStart     = 0U;									// Time-stamp: when the process was scheduled
static	volatile	uint32_t	vTimeStop      = 0U;									// Time-stamp: when the process was stopped
static	volatile	uint32_t	vTimeLastStart = 0U;									// Time-stamp: when the process was started (previous cycle)
static	volatile	uint64_t	vTickCount	   = 0U;									// 64-bit timer (1-us)
static	volatile	bool		vTickLess	   = false;									// Tickless mode
static	volatile	bool		vTimeout	   = false;									// Timeout
extern	volatile	bool		vPriv_insideSVC[KNB_CORES];								// Inside an SVC call

