/*
 * \brief Initialise the uKernel
 *
 * - Initialise the manager
 *
 */
void	model_kernel_init(void) {

	#if (KKERN_NB_PRECISE_SIGNALS > 0)
	RCC->APB1ENR |= RCC_APB1ENR_TIM4EN;
	#endif

	RCC->APB1ENR |= RCC_APB1ENR_TIM2EN;
	RCC->APB1ENR |= RCC_APB1ENR_TIM5EN;
	RCC->APB1ENR |= RCC_APB1ENR_TIM3EN;

	#if (KKERN_NB_PRECISE_SIGNALS > 0)
	INTERRUPT_VECTOR(TIM4_C0_IRQn, local_TIM4_IRQHandler);
	NVIC_SetPriority(TIM4_C0_IRQn, KINT_LEVEL_KERNEL_TIMERS);
	#endif

	INTERRUPT_VECTOR(TIM2_C0_IRQn, local_TIM2_IRQHandler);
	INTERRUPT_VECTOR(TIM5_C0_IRQn, local_TIM5_IRQHandler);

	NVIC_SetPriority(TIM2_C0_IRQn, KINT_LEVEL_KERNEL_TIMERS);
	NVIC_SetPriority(TIM5_C0_IRQn, KINT_LEVEL_KERNEL_TIMERS);
	NVIC_SetPriority(TIM3_C0_IRQn, KINT_LEVEL_KERNEL_TIMERS);
	NVIC_SetPriority(PendSV_C0_IRQn, KINT_LEVEL_KERNEL_PREEMPTION);

// Timer 4 (1-us free running timer for signal precise)

	#if (KKERN_NB_PRECISE_SIGNALS > 0)
	TIM4->PSC  = (uint32_t)KPSCT4;
	TIM4->ARR  = (uint32_t)KARRT4;
	TIM4->EGR  = (uint32_t)TIM4_EGR_UG;
	TIM4->CNT  = 0U;
	TIM4->DIER = (uint32_t)TIM4_DIER_UIE;
	TIM4->SR  &= (uint32_t)~TIM4_SR_UIF;
	TIM4->CR1 |= (uint32_t)TIM4_CR1_CEN;
	#endif

// Timer 2 (free running timer for statistics and for the tickcount)

	TIM2->PSC  = (uint32_t)KPSCT2;
	TIM2->ARR  = (uint32_t)KARRT2;
	TIM2->EGR  = (uint32_t)TIM2_EGR_UG;
	TIM2->CNT  = 0U;
	TIM2->DIER = (uint32_t)TIM2_DIER_UIE;
	TIM2->SR  &= (uint32_t)~TIM2_SR_UIF;
	TIM2->CR1 |= (uint32_t)TIM2_CR1_CEN;

// Timer 5 (1-ms or tickless)

	TIM5->PSC  = (uint32_t)KPSCT5;
	TIM5->ARR  = (uint32_t)KARRT5;
	TIM5->EGR  = (uint32_t)TIM5_EGR_UG;
	TIM5->CNT  = 0U;
	TIM5->DIER = (uint32_t)TIM5_DIER_UIE;
	TIM5->SR  &= (uint32_t)~TIM5_SR_UIF;
	TIM5->CR1 |= (uint32_t)TIM5_CR1_CEN;

// Timer 3 (20-ms)

	TIM3->PSC  = (uint32_t)KPSCT3;
	TIM3->ARR  = (uint32_t)KARRT3;
	TIM3->EGR  = (uint32_t)TIM3_EGR_UG;
	TIM3->CNT  = 0U;
	TIM3->DIER = (uint32_t)TIM3_DIER_UIE;
	TIM3->SR  &= (uint32_t)~TIM3_SR_UIF;
	TIM3->CR1 |= (uint32_t)TIM3_CR1_CEN;
}

/*
 * \brief Run the multitasking
 *
 * - Run the kernel
 *
 */
void	model_kernel_runKernel(void) {

	#if (KKERN_NB_PRECISE_SIGNALS > 0)
	NVIC_ClearPendingIRQ(TIM4_C0_IRQn);
	NVIC_EnableIRQ(TIM4_C0_IRQn);
	#endif

	NVIC_ClearPendingIRQ(TIM2_C0_IRQn);
	NVIC_ClearPendingIRQ(TIM5_C0_IRQn);
	NVIC_ClearPendingIRQ(TIM3_C0_IRQn);

	NVIC_EnableIRQ(TIM2_C0_IRQn);
	NVIC_EnableIRQ(TIM5_C0_IRQn);
	NVIC_EnableIRQ(TIM3_C0_IRQn);

	vTickCount = 0U;
}

/*
 * \brief Set the low power mode
 *
 * - Set the low power mode
 *
 * KKERN_CPU_MODE_NORMAL		-> Normal mode
 * KKERN_CPU_MODE_DEEP_SLEEP	-> CPU in a deep sleep mode
 * KKERN_CPU_MODE_HIBERNATE		-> CPU in a hibernate mode
 * KKERN_CPU_MODE_STOP			-> CPU in a stop mode
 *
 */
void	model_kernel_setLowPower(uint8_t mode) {
	uint32_t	timeStop;

	switch (mode) {
		case KKERN_CPU_MODE_NORMAL:
		case KKERN_CPU_MODE_DEEP_SLEEP:
		case KKERN_CPU_MODE_HIBERNATE:
		case KKERN_CPU_MODE_STOP:
		default: {

// Freeze the timeout timer
// Max time 0x7FFFFFFF (TIM5 is clocked to 0.5-ms)

			TIM3->CR1 &= (uint32_t)~TIM3_CR1_CEN;

			if (vTickLess == false) {

				INTERRUPTION_OFF;
				vTickLess = true;

				timeStop = temporal_getNextLowPowerTime();
				timeStop = (timeStop > (KWAIT_INFINITY / N)) ? (KWAIT_INFINITY / N) : (timeStop);
				timeStop = (timeStop == 0U)					 ? (1U)				    : (timeStop);

				TIM5->CR1 &= (uint32_t)~TIM5_CR1_CEN;
				TIM5->SR  &= (uint32_t)~TIM5_SR_UIF;
				TIM5->ARR  = (timeStop * N) - 1U;

				TIM5->CNT  = (N > 1U) ? (TIM5->CNT % N) : (0U);

				NVIC_ClearPendingIRQ(TIM5_C0_IRQn);
				TIM5->CR1 |= TIM5_CR1_CEN;
				INTERRUPTION_RESTORE;
			}

// We arrive here by:
// - Tickless timeout
// - Pre-emption interruptions
// - Conventional interruptions

			vTimeout = false;
			do { WAITING_INTERRUPTION; } while (vTimeout == false);

			break;
		}
	}
}

#if (KKERN_NB_PRECISE_SIGNALS > 0)
/*
 * \brief Precise signal (minimal jitter)
 *
 * - Set the precise timer
 *
 */
void	model_kernel_setPreciseSignal(prcs_t *handle) {

	TIM4->DIER &= (uint32_t)~TIM4_DIER_CC1IE;

	INTERRUPTION_OFF;
	vPrcsAbsCount &= 0xFFFFFFFFFFFF0000u;
	vPrcsAbsCount |= (uint64_t)TIM4->CNT;

	handle->oNextTime = vPrcsAbsCount + handle->oPeriod;

	local_nextTime(vPrcsAbsCount);
	INTERRUPTION_RESTORE;
}
#endif

/*
 * \brief Read the tickCount
 *
 * - Read the tickcount
 *
 */
void	model_kernel_readTickCount(uint64_t *tickCount) {

	INTERRUPTION_OFF;
	local_timeStmp(false);

	*tickCount = vTickCount;
	INTERRUPTION_RESTORE;
}

/*
 * \brief Start a new process timeout
 *
 * - Start a new process timeout
 *
 */
void	model_kernel_newProcessTimeout(void) {

	TIM3->CR1 &= (uint32_t)~TIM3_CR1_CEN;
	TIM3->SR  &= (uint32_t)~TIM3_SR_UIF;
	NVIC_ClearPendingIRQ(TIM3_C0_IRQn);
	NVIC_EnableIRQ(TIM3_C0_IRQn);

	TIM3->CNT  = 0U;
	TIM3->ARR  = KARRT3;
	TIM3->SR  &= (uint32_t)~TIM3_SR_UIF;
	TIM3->CR1 |= TIM3_CR1_CEN;
}

/*
 * \brief Stop the process timeout
 *
 * - Stop the process timeout
 *
 */
void	model_kernel_stopProcessTimeout(void) {

	NVIC_DisableIRQ(TIM3_C0_IRQn);
}

