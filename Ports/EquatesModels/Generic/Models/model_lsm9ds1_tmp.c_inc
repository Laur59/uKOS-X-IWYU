#include	"LSM9DS1/LSM9DS1.h"

/*
 * \brief model_lsM9ds1tmp_init
 *
 * - Initialise the manager
 *
 */
void	model_lsM9ds1tmp_init(void) {

	cb_control(KTEMPERATURE_RESERVE);
	cb_control(KTEMPERATURE_INIT);
	cb_control(KTEMPERATURE_RELEASE);
}

/*
 * \brief model_lsM9ds1tmp_read
 *
 * - Get the temperature
 *
 */
int32_t	model_lsM9ds1tmp_read(float64_t *temperature) {
	uint8_t		xsb[2];
	int16_t		value;

	cb_control(KTEMPERATURE_RESERVE);
	cb_readTemp(LSM9DS1_OUT_TEMP_L, xsb, 2u);
	value = (int16_t)(xsb[1]<<8u | xsb[0]);
	*temperature = (((float64_t)(value)) / 16.0) + 25.0 - KTEMPERATURE_ZERO_KELVIN;
	cb_control(KTEMPERATURE_RELEASE);
	return (KERR_TEMPERATURE_NOERR);
}

/*
 * \brief model_lsM9ds1tmp_write
 *
 * - Set the temperature
 *
 */
int32_t	model_lsM9ds1tmp_write(float64_t temperature) {

	UNUSED(temperature);

	return (KERR_TEMPERATURE_SYCNA);
}
