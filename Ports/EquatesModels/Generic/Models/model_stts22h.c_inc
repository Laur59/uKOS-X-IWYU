#include	"STTS22H/STTS22H.h"

/*
 * \brief model_stts22h_init
 *
 * - Initialise some specific parts
 *
 */
void	model_stts22h_init(void) {
	uint8_t		buffer[2];

	cb_configure();
	kern_suspendProcess(1u);

	buffer[0] = STTS22H_CNTRL;
	buffer[1] = (1u<<LOW_ODR_START) | (AVG25HZ<<AVG) | (1u<<FREERUN);
	cb_writeI2C(KI2C_ADD_STTS22H, &buffer[0], 2u);
}

/*
 * \brief model_stts22h_read
 *
 * - Get the temperature
 *
 */
int32_t	model_stts22h_read(float64_t *temperature) {
	uint8_t		buffer[1], msb, lsb;
	int16_t		value;

// Get the temperature

	buffer[0] = STTS22H_TEMP_H;
	cb_readI2C(KI2C_ADD_STTS22H, &buffer[0], 1u);
	msb = buffer[0];

	buffer[0] = STTS22H_TEMP_L;
	cb_readI2C(KI2C_ADD_STTS22H, &buffer[0], 1u);
	lsb = buffer[0];

// Scale it

	value = (int16_t)((msb<<8u) | lsb);
	*temperature = ((float64_t)value / KSTTS22H_SCALING) - KTEMPERATURE_ZERO_KELVIN;
	return (KERR_TEMPERATURE_NOERR);
}

/*
 * \brief model_stts22h_write
 *
 * - Set the temperature
 *
 */
int32_t	model_stts22h_write(float64_t temperature) {
	uint8_t		buffer[2], value;

// Scale the temperature
// Save it

	value = (uint8_t)((temperature + KTEMPERATURE_ZERO_KELVIN) / 0.064) + 63u;
	buffer[0] = STTS22H_TEMP_H_LIMIT;
	buffer[1] = value;
	cb_writeI2C(KI2C_ADD_STTS22H, &buffer[0], 2u);
	return (KERR_TEMPERATURE_NOERR);
}
