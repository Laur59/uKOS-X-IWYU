#include	"BQ27510G3/BQ27510G3.h"

/*
 * \brief model_bq27510g3_init
 *
 * - Configure some specific parts
 *
 */
void	model_bq27510g3_init(void) {

	cb_configure();
}

/*
 * \brief model_bq27510g3_read
 *
 * - Read the battery information
 *
 */
int32_t	model_bq27510g3_read(batteryInfo_t *infoBattery) {
	int16_t		current;
	uint16_t	voltage, temperature, fullChargedCapacity, remainingCapacity, timeToEmpty, cycles;
	bool		error;

	infoBattery->oVoltage			  = 0.0;
	infoBattery->oCurrent			  = 0.0;
	infoBattery->oTemperature		  = 0.0;
	infoBattery->oFullChargedCapacity = 0.0;
	infoBattery->oRemainingCapacity	  = 0.0;
	infoBattery->oTimeToEmpty		  = 0u;
	infoBattery->oCycles			  = 0u;

// Get the battery information

	error  = cb_getValue(KBAT_VOLTAGE,			  &voltage);
	error |= cb_getValue(KBAT_CURRENT,			  (uint16_t *)&current);
	error |= cb_getValue(KBAT_TEMPERATURE,		  &temperature);
	error |= cb_getValue(KBAT_CHARGED_CAPACITY,   &fullChargedCapacity);
	error |= cb_getValue(KBAT_REMAINING_CAPACITY, &remainingCapacity);
	error |= cb_getValue(KBAT_TIME_TO_EMPTY,	  &timeToEmpty);
	error |= cb_getValue(KBAT_CYCLE_COUNT,		  &cycles);

	if (error == true) { return (KERR_BATTERY_GEERR); }

	infoBattery->oVoltage			  = (float64_t)voltage / 1000.0;
	infoBattery->oCurrent			  = (float64_t)current;
	infoBattery->oTemperature		  = (float64_t)temperature / 10.0;
	infoBattery->oFullChargedCapacity = (float64_t)fullChargedCapacity;
	infoBattery->oRemainingCapacity	  = (float64_t)remainingCapacity;
	infoBattery->oTimeToEmpty		  = timeToEmpty;
	infoBattery->oCycles			  = cycles;
	return (KERR_BATTERY_NOERR);
}
