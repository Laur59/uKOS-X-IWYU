extern	proc_t	*vKern_runProc[KNB_CORES];

/*
 * \brief local_printFunction
 *
 * - Display the function name
 * - Display the process name
 *
 */
static	void	__attribute__ ((noinline)) local_printFunction(uintptr_t pc, const char_t *vectorName, const char_t *excepInter) {
			uint32_t	core;
	const	char_t		*functionName;

	core = GET_RUNNING_CORE;

	if (pc == 0u) {
		cmns_send(KDEF0, excepInter);	    cmns_send(KDEF0, vectorName);   cmns_send(KDEF0, "\n");
	}
	else {
		machine_readFunctionName(pc, &functionName);
		cmns_send(KDEF0, excepInter);	    cmns_send(KDEF0, vectorName);   cmns_send(KDEF0, "\n");
		cmns_send(KDEF0, "Routine:      "); cmns_send(KDEF0, functionName); cmns_send(KDEF0, "\n");
	}

	#if (defined(NO_KERNEL_S))
	cmns_send(KDEF0, "No uKOS-X uKernel\n");

	#else
	cmns_send(KDEF0, "Process:      "); cmns_send(KDEF0, vKern_runProc[core]->oSpecification.oIdentifier); cmns_send(KDEF0, "\n");
	#endif
}
