PROJECT			=  cluster_TFL

# Paths overloaded

# - PATH_BASE	PATH_BASE ?= $(PATH_UKOS)/Ports/Targets/$(BOARD)/Base

PATH_BASE		=  $(PATH_UKOS)/Ports/Targets/$(BOARD)/Base_CM7

# Target & Infrastructure

PREFIX			?=  arm-none-eabi-
COMPILER_FAMILY	?=  gcc

BOARD			=  Asmodee_H747
V				=  Variant_Test_CM7
SOC				=  STM32H747
CORE			=  CORTEX_M7
OPTIMISATION	=  -Os

CXXFLAGS		+= -DTF_LITE_STATIC_MEMORY=1 -DCORTEX

MYLIB			=    $(PATH_UKOS)/Third_Parties/Tflite-micro/Library/$(CORE)/libTFLite.a
PATH_INCLUDES	+= -I$(PATH_UKOS)/Third_Parties/Tflite-micro/uKOS_Interface/CORTEX_M_generic
