SHELL			= /bin/sh

ifndef PATH_UKOS_X_PACKAGE
    $(error PATH_UKOS_X_PACKAGE is not defined)
endif

PATH_D2XX		= $(PATH_TOOLS_ROOT)/local
PATH_SQEX		= ~/Library/Calerga/LMEExt
PATH_LME		= '/Applications/Sysquake Pro 6.5/Sysquake Pro.app/Contents/Resources/include'

CFLAGS			=  -DLMEIntSizeIs64
CFLAGS			+= -I$(PATH_D2XX)/include
CFLAGS			+= -I$(PATH_UKOS_X_PACKAGE)/OS/Includes
CFLAGS			+= -I$(PATH_LME)
CFLAGS			+= -g
CFLAGS			+= -target x86_64-apple-macos12
LDFLAGS			=  -target x86_64-apple-macos12 -bundle -undefined suppress -Wl,-flat_namespace
LDFLAGS			+= -g

.PHONY: all
all: viewer.so

viewer.so: viewer.o ftdiSPI.o
	$(CC) $(LDFLAGS) -o $@ $^ -L$(PATH_D2XX)/lib -lftd2xx
	install_name_tool -change libftd2xx.dylib $(PATH_D2XX)/lib/libftd2xx.dylib $@
	cp -R viewer.so $(PATH_SQEX)/viewer.so
