cmake_minimum_required(VERSION 3.26)

project(FatFs_All
	DESCRIPTION "FatFs static libraries for all supported cores"
	LANGUAGES NONE
)

# Include ExternalProject module
include(ExternalProject)

message("╔════════════════════════════════════════════════════════════╗")
message("║           Building FatFs for All Architectures             ║")
message("║              (Using ExternalProject)                       ║")
message("╚════════════════════════════════════════════════════════════╝")
message("")

# List of all supported cores
set(SUPPORTED_CORES
	CORTEX_M3
	CORTEX_M33
	CORTEX_M4
	CORTEX_M55
	CORTEX_M7
	RV32IMAC
	RV64IMAFDC
)

# Create an ExternalProject for each core
foreach(CORE ${SUPPORTED_CORES})
	if(EXISTS "${CMAKE_CURRENT_SOURCE_DIR}/${CORE}/CMakeLists.txt")
		message(STATUS "Configuring ExternalProject for core: ${CORE}")

		ExternalProject_Add(FatFs_${CORE}
			# Prefix - this sets up unique directories for each external project
			PREFIX            "${CMAKE_CURRENT_BINARY_DIR}/ep-${CORE}"

			# Source configuration
			SOURCE_DIR        "${CMAKE_CURRENT_SOURCE_DIR}/${CORE}"
			BINARY_DIR        "${CMAKE_CURRENT_SOURCE_DIR}/${CORE}/build"

			# Configure step - pass generator explicitly
			CMAKE_ARGS        -DCMAKE_BUILD_TYPE=${CMAKE_BUILD_TYPE}
			                  -G ${CMAKE_GENERATOR}
			CMAKE_CACHE_ARGS  ""

			# Build step
			BUILD_COMMAND     ${CMAKE_COMMAND} --build <BINARY_DIR>
			BUILD_ALWAYS      OFF
			BUILD_BYPRODUCTS  "${CMAKE_CURRENT_SOURCE_DIR}/${CORE}/libFatFs.a"

			# Install step - we don't need installation, libraries stay in-place
			INSTALL_COMMAND   ""

			# Download/Update steps - we use local source, no download needed
			DOWNLOAD_COMMAND  ""
			UPDATE_COMMAND    ""

			# Logging
			LOG_CONFIGURE     ON
			LOG_BUILD         ON
			LOG_OUTPUT_ON_FAILURE ON

			# Use terminal for better output
			USES_TERMINAL_BUILD ON
		)

		list(APPEND ALL_CORE_PROJECTS FatFs_${CORE})
	else()
		message(WARNING "Skipping ${CORE}: CMakeLists.txt not found")
	endif()
endforeach()

# Create a custom target that depends on all external projects
# This ensures they all build when you run 'cmake --build build'
add_custom_target(build_all_cores ALL
	DEPENDS ${ALL_CORE_PROJECTS}
	COMMENT "Building FatFs for all architectures"
)

# Summary message
message("")
message("──────────────────────────────────────────────────────────────")
message("Configuration complete.")
message("")
message("To build all libraries, run:")
message("  cmake --build build")
message("")
message("To rebuild all libraries (force rebuild), run:")
message("  cmake --build build --target FatFs_CORTEX_M4-forceconfigure")
message("")
message("Individual targets:")
foreach(CORE ${SUPPORTED_CORES})
	message("  FatFs_${CORE}")
endforeach()
message("──────────────────────────────────────────────────────────────")
