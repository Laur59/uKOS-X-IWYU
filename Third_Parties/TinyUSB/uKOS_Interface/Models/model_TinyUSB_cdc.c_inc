#define	KCONNECTED		true
#define	KDISCONNECTED	false

static	bool	vConnected[KNB_CORES] = MCSET(KDISCONNECTED);

/*
 * \brief TinyUSB_cdc_init
 *
 * - Initialise the cdcx manager
 *
 */
void	TinyUSB_cdc_init(void) {

}

/*
 * \brief TinyUSB_cdc_clean
 *
 * - Clean the cdcx manager
 *
 */
void	TinyUSB_cdc_clean(void) {

}

/*
 * \brief TinyUSB_cdc_write
 *
 * - Write a buffer to the usb cdcx manager
 *
 */
void	TinyUSB_cdc_write(uint8_t itf, const uint8_t *buffer, uint32_t size) {
	uint32_t	core;

	core = GET_RUNNING_CORE;

	while (tud_cdc_n_write_available(itf) < size) {
		if (vConnected[core] == KDISCONNECTED) {
			kern_suspendProcess(10u);
		}
		else {
			kern_suspendProcess(1u);
		}
	}

	tud_cdc_n_write(itf, buffer, size);
	tud_cdc_n_write_flush(itf);
}

/*
 * \brief TinyUSB_cdc_read
 *
 * - Read a buffer from the usb cdcx manager
 *
 */
void	TinyUSB_cdc_read(uint8_t itf, uint8_t *buffer, uint32_t *size) {

	if (tud_cdc_n_available(itf) != 0u) {
		*size = tud_cdc_n_read(itf, buffer, *size);
	}
	else {
		*size = 0u;
	}
}

// cdc callbacks
// =============

/*
 * \brief tud_cdc_line_state_cb
 *
 * - Called when cdc when line state changed e.g connected/disconnected
 *
 */
void	tud_cdc_line_state_cb(uint8_t itf, bool dtr, bool rts) {
	uint32_t	core;

	UNUSED(itf);
	UNUSED(rts);

	core = GET_RUNNING_CORE;

	if (dtr == true) {
		if (vConnected[core] == KDISCONNECTED) {
			vConnected[core] = KCONNECTED;

			LOG(KINFO_SYSTEM, "model_TinyUSB_cdc: connected");
		}
	}
	else {
		if (vConnected[core] == KCONNECTED) {
			vConnected[core] = KDISCONNECTED;

			LOG(KINFO_SYSTEM, "model_TinyUSB_cdc: disconnected");
		}
	}
}

/*
 * \brief tud_cdc_rx_cb
